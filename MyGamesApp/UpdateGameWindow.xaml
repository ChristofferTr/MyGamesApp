<Window x:Class="MyGamesApp.UpdateGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Game" Height="300" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Select a Game:" />
            <ComboBox x:Name="gameComboBox" DisplayMemberPath="GameName" Width="250" Margin="0 5 0 10" />

            <Label Content="New Game Name:" />
            <TextBox x:Name="newGameNameTextBox" Width="250" Margin="0 5 0 10" />

            <Label Content="New Publisher:" />
            <TextBox x:Name="newPublisherTextBox" Width="250" Margin="0 5 0 10" />

            <CheckBox x:Name="newPlayedCheckBox" Content="Played" Margin="0 5 0 10" />

            <Button Content="Update" Width="100" HorizontalAlignment="Right" Click="UpdateButton_Click" />
        </StackPanel>
    </Grid>
</Window>
