<Window x:Class="MyGamesApp.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGamesApp"
        mc:Ignorable="d"
        Title="AddGameWindow" Height="300" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Game Name:" />
            <TextBox x:Name="gameNameTextBox" Width="250" Margin="0 5 0 10" />

            <Label Content="Publisher:" />
            <TextBox x:Name="publisherTextBox" Width="250" Margin="0 5 0 10" />

            <CheckBox x:Name="playedCheckBox" Content="Played" Margin="0 5 0 10" />

            <Button Content="Save" Width="100" HorizontalAlignment="Right" Click="SaveButton_Click" />
            <ComboBox x:Name="genreComboBox" Width="200" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
